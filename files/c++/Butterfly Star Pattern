#include<iostream>
using namespace std;
int main()
{
    int n,space;
    cout<<"Enter Number of rows: ";
    cin>>n;

    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=i;j++)
        {
            cout<<"* ";
        }
        space=2*n-2*i;
        for(int k=1;k<=space;k++)
        {
            cout<<"  ";
        }
        for(int j=1;j<=i;j++)
        {
            cout<<" *";
        }
        cout<<endl;
    }

    for(int i=n;i>=1;i--)
    {
        for(int j=1;j<=i;j++)
        {
            cout<<"* ";
        }
        space=2*n-2*i;
        for(int k=1;k<=space;k++)
        {
            cout<<"  ";
        }
        for(int j=1;j<=i;j++)
        {
            cout<<" *";
        }
        cout<<endl;
    }
    return 0;
}
